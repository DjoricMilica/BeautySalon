<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:backgroundTint="#6A5B5B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#6A5B5B"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Reservation for:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtServiceName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#912E2E"
            android:gravity="center"
            android:text="Date:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtReservationDate"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#912E2E"
            android:gravity="center"
            android:text="Time:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtReservationTime"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnCancleReservation"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#CC1A1A"
            android:text="Cancle Reservation"
            android:textColor="#000000" />

    </LinearLayout>
</androidx.cardview.widget.CardView>